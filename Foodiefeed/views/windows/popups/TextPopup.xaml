<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodiefeed.views.windows.popups.TextPopup"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Color="Transparent">
    <Frame BackgroundColor="{DynamicResource MainBackgroundColorContrast}">
        <ScrollView HeightRequest="300">
            <Label FontSize="15" FontAttributes="None" TextColor="{DynamicResource TextColor}" x:Name="ContentLabel"/>
        </ScrollView>
    </Frame>
</toolkit:Popup>