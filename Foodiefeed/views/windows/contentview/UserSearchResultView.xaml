<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foodiefeed.views.windows.contentview.UserSearchResultView">
    
    <Border StrokeShape="RoundRectangle 20" BackgroundColor="White">
        <Grid BackgroundColor="White" WidthRequest="650" HeightRequest="90">
            <HorizontalStackLayout  Spacing="10">
                <Image Source="avatar.png" WidthRequest="80" HeightRequest="90"/>
                
                <VerticalStackLayout Spacing="3" VerticalOptions="Center">
                    <Label x:Name="UsernameLabel" FontSize="20" FontAttributes="Bold" TextColor="Black"/>
                    <HorizontalStackLayout Spacing="4">
                        <Label x:Name="FollowsLabel" FontSize="15"  TextColor="Black"/>
                        <Label x:Name="FriendsLabel" FontSize="15" TextColor="Black"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="End"  Spacing="5" VerticalOptions="Center" Padding="10">
                    <Button FontAttributes="Bold" Text="Send friend request" BackgroundColor="#e0e0e0" Margin="0,0,10,0" VerticalOptions="Center">
                        <Button.Shadow>
                            <Shadow Opacity="0.4"
                                    Radius="10"/>
                        </Button.Shadow>
                        <Button.GestureRecognizers>
                            <PointerGestureRecognizer PointerEntered="ScaleButtonSizeAnimation" PointerExited="CondenseButtonSizeAnimation"></PointerGestureRecognizer>
                        </Button.GestureRecognizers>
                    </Button>

                <Button FontAttributes="Bold" Text="Follow" BackgroundColor="#e32441" Margin="0,0,10,0" VerticalOptions="Center">
                        <Button.Shadow>
                            <Shadow Opacity="0.4"
                                    Radius="10"/>
                        </Button.Shadow>
                        <Button.GestureRecognizers>
                            <PointerGestureRecognizer PointerEntered="ScaleButtonSizeAnimation" PointerExited="CondenseButtonSizeAnimation"></PointerGestureRecognizer>
                        </Button.GestureRecognizers>
                    </Button>

                <Button FontAttributes="Bold" Text="Profile" BackgroundColor="Black" TextColor="White" Margin="0,0,10,0" VerticalOptions="Center">
                        <Button.Shadow>
                            <Shadow Opacity="0.4"
                                    Radius="10"/>
                        </Button.Shadow>
                        <Button.GestureRecognizers>
                            <PointerGestureRecognizer PointerEntered="ScaleButtonSizeAnimation" PointerExited="CondenseButtonSizeAnimation"></PointerGestureRecognizer>
                        </Button.GestureRecognizers>
                    </Button>
            </HorizontalStackLayout>
        </Grid>
        
        <Border.Shadow>
            <Shadow Opacity="0.4" 
                    Brush="Black"/>
        </Border.Shadow>
    </Border>
</ContentView>
